<h1>New Post</h1>

<%= form_tag posts_path do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label id="post_title" name="post[title]">Title</label><br>
  <input type="text" id="post_title" name ="post[title]">

  <label id="post_description" name="post[description]">Description</label><br>
  <input type="text" id="post_description" name="post[description]">

  <input type="submit" value="Submit Post">
<% end %> 

<%= params.inspect %>
